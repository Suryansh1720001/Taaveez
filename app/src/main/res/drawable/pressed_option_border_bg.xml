<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                />
            <solid android:color="@color/white" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:top="3dp" android:bottom="1dp">
        <shape android:shape="oval">
            <solid android:color="?attr/item_topic_bg" /> <!-- Shadow color -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
